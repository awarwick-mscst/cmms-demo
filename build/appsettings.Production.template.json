{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "DatabaseSettings": {
    "Provider": "PostgreSql"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=CMMS;Username=cmms;Password=REPLACE_ME"
  },
  "JwtSettings": {
    "Secret": "REPLACE_ME_WITH_A_LONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS",
    "Issuer": "CMMS",
    "Audience": "CMMS-Users",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutMinutes": 15
  },
  "Licensing": {
    "Enabled": true,
    "LicenseServerUrl": "http://fragbox:5100",
    "PublicKeyPath": "",
    "GracePeriodDays": 30,
    "PhoneHomeIntervalHours": 24,
    "WarningDaysBeforeExpiry": 14
  },
  "LdapSettings": {
    "Enabled": false
  },
  "EmailCalendar": {
    "Enabled": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5000"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
