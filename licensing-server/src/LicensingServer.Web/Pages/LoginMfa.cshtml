@page
@model LicensingServer.Web.Pages.LoginMfaModel
@{
    ViewData["Title"] = "Verify Identity";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify Identity - CMMS Licensing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body { background-color: #212529; display: flex; align-items: center; justify-content: center; min-height: 100vh; }
        .mfa-card { max-width: 450px; width: 100%; }
        .tab-btn { cursor: pointer; padding: 12px; text-align: center; border-radius: 8px; transition: all 0.2s; }
        .tab-btn:hover { background-color: #f8f9fa; }
        .tab-btn.active { background-color: #e3f2fd; border: 2px solid #0d6efd; }
        .tab-btn:not(.active) { border: 2px solid #dee2e6; }
    </style>
</head>
<body>
    <div class="mfa-card">
        <div class="card shadow">
            <div class="card-body p-4">
                <div class="text-center mb-3">
                    <i class="bi bi-shield-check text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Verify Your Identity</h5>
                    <p class="text-muted small">Step 2 of 2: Complete multi-factor authentication</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle me-1"></i> @Model.ErrorMessage
                    </div>
                }

                @* Method selector *@
                @if (Model.HasTotp && Model.HasFido2)
                {
                    <div class="d-flex gap-2 mb-3">
                        <div class="tab-btn active flex-fill" id="tab-totp" onclick="showTab('totp')">
                            <i class="bi bi-phone"></i><br />
                            <small>Authenticator</small>
                        </div>
                        <div class="tab-btn flex-fill" id="tab-fido2" onclick="showTab('fido2')">
                            <i class="bi bi-key"></i><br />
                            <small>Security Key</small>
                        </div>
                    </div>
                }

                @* TOTP Section *@
                <div id="section-totp" @(Model.HasTotp ? "" : "style=display:none")>
                    <form method="post" asp-page-handler="VerifyTotp" id="totpForm">
                        <div id="totp-code-section">
                            <div class="mb-3">
                                <label for="totpCode" class="form-label">
                                    Enter the 6-digit code from your authenticator app
                                </label>
                                <input type="text" class="form-control text-center font-monospace" id="totpCode" name="TotpCode"
                                       maxlength="6" pattern="[0-9]{6}" required autofocus
                                       style="font-size: 1.5rem; letter-spacing: 0.5rem;" />
                            </div>
                            <input type="hidden" name="UseRecoveryCode" value="false" id="useRecoveryCodeField" />
                            <button type="submit" class="btn btn-primary w-100 mb-2">
                                <i class="bi bi-check-lg me-1"></i> Verify
                            </button>
                            <div class="text-center">
                                <a href="#" class="small text-muted" onclick="toggleRecovery(); return false;">
                                    Use a recovery code instead
                                </a>
                            </div>
                        </div>

                        <div id="recovery-code-section" style="display:none;">
                            <div class="mb-3">
                                <label for="recoveryCode" class="form-label">Enter a recovery code</label>
                                <input type="text" class="form-control text-center font-monospace" id="recoveryCode"
                                       placeholder="xxxxx-xxxxx" />
                            </div>
                            <button type="button" class="btn btn-warning w-100 mb-2" onclick="submitRecovery()">
                                <i class="bi bi-life-preserver me-1"></i> Use Recovery Code
                            </button>
                            <div class="text-center">
                                <a href="#" class="small text-muted" onclick="toggleRecovery(); return false;">
                                    Back to authenticator code
                                </a>
                            </div>
                        </div>
                    </form>
                </div>

                @* FIDO2 Section *@
                <div id="section-fido2" style="display:none;">
                    <div class="text-center py-3">
                        <i class="bi bi-usb-drive" style="font-size: 3rem; color: #6c757d;"></i>
                        <p class="mt-2 text-muted">Insert your security key and click the button below.</p>
                        <button class="btn btn-primary btn-lg" onclick="authenticateFido2()" id="fido2AuthBtn">
                            <i class="bi bi-key me-1"></i> Use Security Key
                        </button>
                        <div id="fido2-status" class="mt-2 small"></div>
                    </div>
                </div>

                @* If only FIDO2, show it by default *@
                @if (!Model.HasTotp && Model.HasFido2)
                {
                    <script>
                        document.getElementById('section-fido2').style.display = 'block';
                    </script>
                }

                <hr />
                <div class="text-center">
                    <a href="/Login" class="small text-muted">
                        <i class="bi bi-arrow-left me-1"></i> Back to login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showTab(tab) {
            document.getElementById('section-totp').style.display = tab === 'totp' ? 'block' : 'none';
            document.getElementById('section-fido2').style.display = tab === 'fido2' ? 'block' : 'none';
            document.getElementById('tab-totp')?.classList.toggle('active', tab === 'totp');
            document.getElementById('tab-fido2')?.classList.toggle('active', tab === 'fido2');
        }

        function toggleRecovery() {
            const codeSection = document.getElementById('totp-code-section');
            const recoverySection = document.getElementById('recovery-code-section');
            const isRecovery = recoverySection.style.display === 'none';
            codeSection.style.display = isRecovery ? 'none' : 'block';
            recoverySection.style.display = isRecovery ? 'block' : 'none';
        }

        function submitRecovery() {
            document.getElementById('useRecoveryCodeField').value = 'true';
            document.getElementById('totpCode').removeAttribute('required');
            document.getElementById('totpCode').value = document.getElementById('recoveryCode').value;
            document.getElementById('totpForm').submit();
        }

        // Auto-submit on 6 digits
        document.getElementById('totpCode')?.addEventListener('input', function() {
            if (this.value.length === 6 && /^\d{6}$/.test(this.value)) {
                document.getElementById('totpForm').submit();
            }
        });

        async function authenticateFido2() {
            const btn = document.getElementById('fido2AuthBtn');
            const status = document.getElementById('fido2-status');

            btn.disabled = true;
            status.innerHTML = '<span class="text-info">Touch your security key when it flashes...</span>';

            try {
                // Get authentication options
                const optionsResponse = await fetch('/LoginMfa?handler=Fido2Options', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': getAntiForgeryToken()
                    }
                });

                if (!optionsResponse.ok) {
                    status.innerHTML = '<span class="text-danger">Session expired. Please log in again.</span>';
                    btn.disabled = false;
                    return;
                }

                const options = await optionsResponse.json();

                // Convert base64url to ArrayBuffer
                options.challenge = base64urlToBuffer(options.challenge);
                if (options.allowCredentials) {
                    options.allowCredentials = options.allowCredentials.map(c => ({
                        ...c,
                        id: base64urlToBuffer(c.id)
                    }));
                }

                // Authenticate
                const assertion = await navigator.credentials.get({ publicKey: options });

                const assertionResponse = {
                    id: assertion.id,
                    rawId: bufferToBase64url(assertion.rawId),
                    type: assertion.type,
                    response: {
                        authenticatorData: bufferToBase64url(assertion.response.authenticatorData),
                        clientDataJSON: bufferToBase64url(assertion.response.clientDataJSON),
                        signature: bufferToBase64url(assertion.response.signature),
                        userHandle: assertion.response.userHandle ? bufferToBase64url(assertion.response.userHandle) : null
                    },
                    extensions: assertion.getClientExtensionResults()
                };

                const verifyResponse = await fetch('/LoginMfa?handler=Fido2Verify', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    body: JSON.stringify({ assertionResponse: assertionResponse })
                });

                if (verifyResponse.ok) {
                    const result = await verifyResponse.json();
                    status.innerHTML = '<span class="text-success"><i class="bi bi-check-circle"></i> Verified!</span>';
                    window.location.href = result.redirectUrl || '/Dashboard';
                } else {
                    const err = await verifyResponse.json();
                    status.innerHTML = `<span class="text-danger">Verification failed: ${err.error || 'Unknown error'}</span>`;
                    btn.disabled = false;
                }
            } catch (err) {
                if (err.name === 'NotAllowedError') {
                    status.innerHTML = '<span class="text-warning">Authentication cancelled or timed out.</span>';
                } else {
                    status.innerHTML = `<span class="text-danger">Error: ${err.message}</span>`;
                }
                btn.disabled = false;
            }
        }

        function getAntiForgeryToken() {
            const input = document.querySelector('input[name="__RequestVerificationToken"]');
            return input ? input.value : '';
        }

        function base64urlToBuffer(base64url) {
            const base64 = base64url.replace(/-/g, '+').replace(/_/g, '/');
            const pad = base64.length % 4 === 0 ? '' : '='.repeat(4 - (base64.length % 4));
            const binary = atob(base64 + pad);
            const buffer = new Uint8Array(binary.length);
            for (let i = 0; i < binary.length; i++) buffer[i] = binary.charCodeAt(i);
            return buffer.buffer;
        }

        function bufferToBase64url(buffer) {
            const bytes = new Uint8Array(buffer);
            let binary = '';
            for (let i = 0; i < bytes.byteLength; i++) binary += String.fromCharCode(bytes[i]);
            return btoa(binary).replace(/\+/g, '-').replace(/\//g, '_').replace(/=/g, '');
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
