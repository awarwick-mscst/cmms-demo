@page
@model LicensingServer.Web.Pages.Licenses.IndexModel
@{
    ViewData["Title"] = "Licenses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Licenses</h2>
    <a href="/Licenses/Create" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i>Generate License</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Customer</th>
                    <th>Tier</th>
                    <th>Activations</th>
                    <th>Expires</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var license in Model.Licenses)
                {
                    var isExpired = license.ExpiresAt < DateTime.UtcNow;
                    var isExpiringSoon = !isExpired && license.ExpiresAt <= DateTime.UtcNow.AddDays(30);

                    <tr>
                        <td>@license.Id</td>
                        <td>@license.Customer.CompanyName</td>
                        <td>
                            @if (license.Tier == "Enterprise") { <span class="badge bg-danger">Enterprise</span> }
                            else if (license.Tier == "Pro") { <span class="badge bg-primary">Pro</span> }
                            else { <span class="badge bg-secondary">Basic</span> }
                        </td>
                        <td>@license.Activations.Count / @license.MaxActivations</td>
                        <td>
                            <span class="@(isExpired ? "text-danger" : isExpiringSoon ? "text-warning" : "")">
                                @license.ExpiresAt.ToString("yyyy-MM-dd")
                            </span>
                        </td>
                        <td>
                            @if (license.IsRevoked)
                            {
                                <span class="badge bg-danger">Revoked</span>
                            }
                            else if (isExpired)
                            {
                                <span class="badge bg-danger">Expired</span>
                            }
                            else if (isExpiringSoon)
                            {
                                <span class="badge bg-warning text-dark">Expiring Soon</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>
                            <a href="/Licenses/Details?id=@license.Id" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            @if (!license.IsRevoked)
                            {
                                <button type="button" class="btn btn-sm btn-outline-success me-1"
                                        data-bs-toggle="modal" data-bs-target="#extendModal-@license.Id">
                                    <i class="bi bi-calendar-plus"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal" data-bs-target="#revokeModal-@license.Id">
                                    <i class="bi bi-x-circle"></i>
                                </button>
                            }
                        </td>
                    </tr>

                    <!-- Extend Modal -->
                    <div class="modal fade" id="extendModal-@license.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post" asp-page-handler="Extend">
                                    <input type="hidden" name="id" value="@license.Id" />
                                    <div class="modal-header">
                                        <h5 class="modal-title">Extend License</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Extend by (months)</label>
                                            <select name="months" class="form-select">
                                                <option value="1">1 month</option>
                                                <option value="3">3 months</option>
                                                <option value="6">6 months</option>
                                                <option value="12" selected>12 months</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-success">Extend</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Revoke Modal -->
                    <div class="modal fade" id="revokeModal-@license.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post" asp-page-handler="Revoke">
                                    <input type="hidden" name="id" value="@license.Id" />
                                    <div class="modal-header">
                                        <h5 class="modal-title">Revoke License</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="alert alert-danger">This action cannot be undone.</div>
                                        <div class="mb-3">
                                            <label class="form-label">Reason</label>
                                            <textarea name="reason" class="form-control" rows="2" required></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Revoke</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Licenses.Any())
                {
                    <tr><td colspan="7" class="text-center text-muted py-4">No licenses yet.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
