@page
@model LicensingServer.Web.Pages.Licenses.DetailsModel
@{
    ViewData["Title"] = $"License #{Model.License.Id}";
    var isExpired = Model.License.ExpiresAt < DateTime.UtcNow;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>License #@Model.License.Id</h2>
    <a href="/Licenses" class="btn btn-outline-secondary">Back to Licenses</a>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><h6 class="mb-0">License Details</h6></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Customer</dt>
                    <dd class="col-sm-8">@Model.License.Customer.CompanyName</dd>

                    <dt class="col-sm-4">Tier</dt>
                    <dd class="col-sm-8">
                        @if (Model.License.Tier == "Enterprise") { <span class="badge bg-danger">Enterprise</span> }
                        else if (Model.License.Tier == "Pro") { <span class="badge bg-primary">Pro</span> }
                        else { <span class="badge bg-secondary">Basic</span> }
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.License.IsRevoked) { <span class="badge bg-danger">Revoked</span> }
                        else if (isExpired) { <span class="badge bg-danger">Expired</span> }
                        else { <span class="badge bg-success">Active</span> }
                    </dd>

                    <dt class="col-sm-4">Issued</dt>
                    <dd class="col-sm-8">@Model.License.IssuedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                    <dt class="col-sm-4">Expires</dt>
                    <dd class="col-sm-8">@Model.License.ExpiresAt.ToString("yyyy-MM-dd HH:mm")</dd>

                    <dt class="col-sm-4">Max Activations</dt>
                    <dd class="col-sm-8">@Model.License.MaxActivations</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><h6 class="mb-0">License Key</h6></div>
            <div class="card-body">
                <textarea class="form-control font-monospace" rows="4" readonly>@Model.License.LicenseKey</textarea>
                <small class="text-muted">Copy this key and enter it in the CMMS application.</small>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><h6 class="mb-0">Activations (@Model.License.Activations.Count / @Model.License.MaxActivations)</h6></div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead class="table-light">
                        <tr><th>Machine</th><th>Status</th><th>Last Phone Home</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var activation in Model.License.Activations.OrderByDescending(a => a.ActivatedAt))
                        {
                            <tr>
                                <td>
                                    @activation.MachineName
                                    <br /><small class="text-muted">@activation.OsInfo</small>
                                </td>
                                <td>
                                    @if (activation.IsActive) { <span class="badge bg-success">Active</span> }
                                    else { <span class="badge bg-secondary">Deactivated</span> }
                                </td>
                                <td>@(activation.LastPhoneHome?.ToString("g") ?? "Never")</td>
                            </tr>
                        }
                        @if (!Model.License.Activations.Any())
                        {
                            <tr><td colspan="3" class="text-center text-muted py-3">No activations yet.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><h6 class="mb-0">Audit Log</h6></div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead class="table-light">
                        <tr><th>Action</th><th>Details</th><th>Time</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.AuditLogs)
                        {
                            <tr>
                                <td><span class="badge bg-info">@log.Action</span></td>
                                <td>@log.Details</td>
                                <td class="text-muted">@log.Timestamp.ToString("g")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
